<page layout="3columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>
        <move element="minicart" destination="top.links" after="-"/>
        <move element="navigation.sections" destination="header-wrapper" after="top.search" />
        <referenceContainer name="header-wrapper">
            <container name="cmsblockafternaivgation" htmlClass="cmsblockheader" htmlTag="div" after="navigation.sections">
                <block class="Magento\Cms\Block\Block" name="cmslinks1">
                    <arguments>
                        <argument name="block_id" xsi:type="string">header-header-offer-block</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
        <referenceBlock name="footer_links" remove="true" />
        <referenceContainer name="footer">
            <block class="Magento\Cms\Block\Block" name="cmslinks" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="string">homepage-footer-cmsblock</argument>
                </arguments>
            </block>
            <block class="Magento\Cms\Block\Block" name="sociallinks" after="cmslinks">
                <arguments>
                    <argument name="block_id" xsi:type="string">homepage-footer-social-block</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
